---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  slug: string;
  thumbnail: ImageMetadata;
  description: string;
  kategori: string;
  status?: string;
  aosDelay?: number;
}

const {
  title,
  slug,
  thumbnail,
  description,
  kategori,
  status = 'aktif',
  aosDelay,
} = Astro.props;
---

<a
  href={`/potensi/wisata/${slug}`}
  class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg hover:-translate-y-1 transition-all group"
  data-aos="fade-up"
  data-aos-delay={aosDelay}
>
  <div class="relative h-48 bg-gray-200">
    <Image
      src={thumbnail}
      alt={title}
      width={400}
      height={192}
      class="w-full h-full object-cover"
      loading="lazy"
      decoding="async"
    />
    <div class="absolute top-3 left-3 flex gap-2">
      <span
        class="px-2 py-1 bg-primary text-white text-xs font-medium rounded-full capitalize"
      >
        {kategori}
      </span>
      {
        status === 'tutup-sementara' && (
          <span class="px-2 py-1 bg-red-500 text-white text-xs font-medium rounded-full">
            Tutup Sementara
          </span>
        )
      }
    </div>
  </div>
  <div class="p-4">
    <h3
      class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-primary transition-colors"
    >
      {title}
    </h3>
    <p class="text-gray-600 text-sm line-clamp-2">{description}</p>
  </div>
</a>
