---
import { getEntry } from 'astro:content';
import SectionTitle from '../common/SectionTitle.astro';
import { siteConfig } from '../../data/siteConfig';

const data = await getEntry('profil', 'lokasi');
const lokasi = data?.data?.lokasi;
---

<div class="mb-12">
  <SectionTitle title="Lokasi" />
  <div
    class="bg-white rounded-2xl shadow-lg overflow-hidden mb-6"
    data-aos="fade-up"
  >
    <div class="aspect-video">
      <iframe
        src={siteConfig.mapsEmbedUrl}
        width="100%"
        height="100%"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        title="Peta lokasi Dusun Bedalo"
      >
      </iframe>
    </div>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div
      class="bg-white rounded-2xl p-6 shadow-lg"
      data-aos="fade-right"
      data-aos-delay="100"
    >
      <div class="flex items-center gap-3 mb-4">
        <div
          class="w-10 h-10 bg-primary/10 rounded-xl flex items-center justify-center"
        >
          <span class="text-xl">üìç</span>
        </div>
        <h3 class="text-xl font-bold text-gray-900">Letak Administratif</h3>
      </div>
      <div class="grid grid-cols-2 gap-3">
        {
          lokasi?.administratif.map((item) => (
            <div class="bg-gray-50 rounded-lg p-3">
              <div class="text-xs text-gray-500 uppercase tracking-wide">
                {item.label}
              </div>
              <div class="font-semibold text-gray-900">{item.value}</div>
            </div>
          ))
        }
      </div>
    </div>
    <div
      class="bg-white rounded-2xl p-6 shadow-lg"
      data-aos="fade-left"
      data-aos-delay="200"
    >
      <div class="flex items-center gap-3 mb-4">
        <div
          class="w-10 h-10 bg-accent/10 rounded-xl flex items-center justify-center"
        >
          <span class="text-xl">üß≠</span>
        </div>
        <h3 class="text-xl font-bold text-gray-900">Batas Wilayah</h3>
      </div>
      <div class="grid grid-cols-2 gap-3">
        {
          lokasi?.batasWilayah.map((item) => (
            <div class="bg-gray-50 rounded-lg p-3">
              <div class="text-xs text-gray-500">{item.arah}</div>
              <div class="font-semibold text-gray-900 text-sm">
                {item.value}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>
