---
import { getEntry } from 'astro:content';
import SectionTitle from '../common/SectionTitle.astro';

const data = await getEntry('profil', 'lokasi');
const jarakFasilitas = data?.data?.lokasi?.jarakFasilitas || [];
---

<div>
  <SectionTitle title="Jarak ke Fasilitas" />
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 gap-4">
    {
      jarakFasilitas.map((item, index) => (
        <div
          class="bg-white rounded-2xl p-5 shadow-lg text-center hover:shadow-xl hover:-translate-y-1 transition-all"
          data-aos="zoom-in"
          data-aos-delay={index * 100}
        >
          <div class="text-3xl mb-2">{item.icon}</div>
          <div class="text-2xl font-extrabold text-primary">
            {item.jarak}
            <span class="text-sm font-normal text-gray-500 ml-1">
              {item.satuan}
            </span>
          </div>
          <div class="text-xs text-gray-500 mt-1">{item.nama}</div>
        </div>
      ))
    }
  </div>
</div>
