---
import { getEntry } from 'astro:content';
import Button from '../common/Button.astro';

const data = await getEntry('siteContent', 'cta');
const cta = data?.data?.cta;
---

{
  cta && (
    <section class="py-16 lg:py-24 bg-gradient-to-r from-primary to-primary-light">
      <div class="max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2
          class="text-3xl md:text-4xl font-bold text-white mb-4"
          data-aos="fade-up"
        >
          {cta.title}
        </h2>
        <p
          class="text-blue-100 max-w-2xl mx-auto mb-8"
          data-aos="fade-up"
          data-aos-delay="50"
        >
          {cta.description}
        </p>
        <div
          class="flex flex-wrap justify-center gap-4"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          <Button
            href={cta.primaryButton?.href || '#'}
            size="lg"
            class="bg-blue text-primary-dark hover:bg-gray-200"
          >
            {cta.primaryButton?.label || 'Selengkapnya'}
          </Button>
          <Button
            href={cta.secondaryButton?.href || '#'}
            variant="outline"
            size="lg"
            class="border-white text-white hover:bg-white/20 hover:border-white/80"
          >
            {cta.secondaryButton?.label || 'Kontak'}
          </Button>
        </div>
      </div>
    </section>
  )
}
