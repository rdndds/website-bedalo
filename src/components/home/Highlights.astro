---
import { getEntry } from 'astro:content';

const data = await getEntry('siteContent', 'highlights');
const highlights = data?.data?.highlights || [];
---

<section class="py-16 lg:py-24">
  <div class="max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12" data-aos="fade-up">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Kenapa Harus ke Bedalo?
      </h2>
      <p class="text-gray-600 max-w-2xl mx-auto">
        Temukan keindahan alam, kearifan lokal, dan pengalaman otentik pedesaan
        pesisir Gunungkidul.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {
        highlights.map((item, index) => (
          <a
            href={item.href}
            class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg hover:-translate-y-1 transition-all group"
            data-aos={index % 2 === 0 ? 'fade-right' : 'fade-left'}
            data-aos-delay={Math.min(index * 100, 300)}
          >
            <div class="text-4xl mb-4">{item.icon}</div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-primary transition-colors">
              {item.title}
            </h3>
            <p class="text-gray-600 text-sm">{item.description}</p>
          </a>
        ))
      }
    </div>
  </div>
</section>
