---

{(impactSummary || impacts.length > 0) && (
  <section id="dampak" class="py-12 lg:py-16 scroll-mt-20">
    <div class="max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8" data-aos="fade-up">
        <h2 class="text-3xl md:text-4xl font-extrabold text-gray-900 mb-3">
          Dampak & Hasil <span class="gradient-text">KKN {kode}</span>
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Kontribusi nyata untuk kemajuan Dusun Bedalo
        </p>
      </div>
      
      {impactSummary && (
        <div class="max-w-3xl mx-auto mb-10" data-aos="fade-up" data-aos-delay="100">
          <div class="bg-gradient-to-r from-primary/5 to-accent/5 rounded-2xl p-6 md:p-8 border-l-4 border-primary">
            <p class="text-gray-700 text-lg leading-relaxed">{impactSummary}</p>
          </div>
        </div>
      )}
      
      {impacts.length > 0 && (
        <div class="grid md:grid-cols-2 gap-6">
          {impacts.map((impact, index) => (
            <div
              class="bg-white rounded-2xl shadow-lg p-6 hover:shadow-xl hover:-translate-y-1 transition-all"
              data-aos="fade-up"
              data-aos-delay={index * 100}
            >
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center text-2xl shrink-0">
                  {icons[index % icons.length]}
                </div>
                <div>
                  <h3 class="text-lg font-bold text-gray-900 mb-2">{impact.title}</h3>
                  <p class="text-gray-600">{impact.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      )}
    </div>
  </section>
)}
