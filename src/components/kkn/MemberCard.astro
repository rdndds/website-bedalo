---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  name: string;
  role: string;
  division: string;
  instagram?: string;
  avatar?: ImageMetadata;
  isKoordinator?: boolean;
}

const { name, role, division, instagram, avatar, isKoordinator } = Astro.props;

function getInitials(name: string): string {
  return name
    .split(' ')
    .map((word) => word[0])
    .join('')
    .toUpperCase()
    .slice(0, 2);
}

const divisionColors: Record<string, string> = {
  Koordinasi: 'from-primary to-primary-hover',
  Administrasi: 'from-blue-500 to-blue-600',
  Pendidikan: 'from-green-500 to-green-600',
  Kesehatan: 'from-red-500 to-red-600',
  Ekonomi: 'from-yellow-500 to-yellow-600',
  Media: 'from-purple-500 to-purple-600',
  Lingkungan: 'from-emerald-500 to-emerald-600',
  Keagamaan: 'from-indigo-500 to-indigo-600',
};

const gradientClass = divisionColors[division] || 'from-gray-500 to-gray-600';
---

<div
  class:list={[
    'member-card bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl hover:-translate-y-1 transition-all',
    isKoordinator && 'ring-2 ring-primary ring-offset-2',
  ]}
  data-division={division}
>
  <div class="p-6 text-center">
    {
      isKoordinator && (
        <div class="inline-flex items-center gap-1.5 px-3 py-1 bg-primary/10 text-primary rounded-full text-xs font-semibold mb-4">
          <span>ðŸ‘‘</span>
          <span>Koordinator</span>
        </div>
      )
    }

    <div class="relative w-24 h-24 mx-auto mb-4">
      {
        avatar ? (
          <Image
            src={avatar}
            alt={name}
            width={96}
            height={96}
            class="w-full h-full object-cover rounded-full"
          />
        ) : (
          <div
            class={`w-full h-full rounded-full bg-gradient-to-br ${gradientClass} flex items-center justify-center text-white text-2xl font-bold`}
          >
            {getInitials(name)}
          </div>
        )
      }
    </div>

    <h3 class="text-lg font-bold text-gray-900 mb-1">{name}</h3>
    <p class="text-primary font-medium text-sm mb-1">{role}</p>
    <p class="text-gray-500 text-xs mb-4">{division}</p>

    {
      instagram && (
        <a
          href={instagram}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-purple-500 via-pink-500 to-orange-400 text-white text-sm font-medium rounded-full hover:opacity-90 transition-opacity"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
