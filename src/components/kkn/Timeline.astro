---
import type { CollectionEntry } from 'astro:content';

interface Props {
  programs: CollectionEntry<'kknProgram'>[];
  kode: string;
}

const { programs, kode } = Astro.props;

const programsWithDate = programs
  .filter((p) => p.data.tanggal)
  .sort((a, b) => new Date(a.data.tanggal!).getTime() - new Date(b.data.tanggal!).getTime());

const kategoriConfig: Record<string, { bgColor: string; textColor: string }> = {
  pendidikan: { bgColor: 'bg-blue-100', textColor: 'text-blue-700' },
  kesehatan: { bgColor: 'bg-green-100', textColor: 'text-green-700' },
  ekonomi: { bgColor: 'bg-yellow-100', textColor: 'text-yellow-700' },
  lingkungan: { bgColor: 'bg-emerald-100', textColor: 'text-emerald-700' },
  keagamaan: { bgColor: 'bg-purple-100', textColor: 'text-purple-700' },
  pariwisata: { bgColor: 'bg-cyan-100', textColor: 'text-cyan-700' },
  lainnya: { bgColor: 'bg-gray-100', textColor: 'text-gray-700' },
};

function formatDate(dateStr: string): string {
  const date = new Date(dateStr);
  return date.toLocaleDateString('id-ID', { day: 'numeric', month: 'long', year: 'numeric' });
}
---

{programsWithDate.length > 0 && (
  <section id="timeline" class="py-12 lg:py-16 bg-gradient-to-br from-gray-50 to-white scroll-mt-20">
    <div class="max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-10" data-aos="fade-up">
        <h2 class="text-3xl md:text-4xl font-extrabold text-gray-900 mb-3">
          Timeline <span class="gradient-text">KKN {kode}</span>
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Perjalanan kegiatan KKN dari awal hingga akhir
        </p>
      </div>
      
      <div class="max-w-3xl mx-auto">
        <div class="space-y-0">
          {programsWithDate.map((program, index) => {
            const config = kategoriConfig[program.data.kategori] || kategoriConfig.lainnya;
            const isLast = index === programsWithDate.length - 1;
            
            return (
              <div
                class="flex gap-4"
                data-aos="fade-up"
                data-aos-delay={index * 100}
              >
                <div class="flex flex-col items-center">
                  <div class="w-4 h-4 bg-primary rounded-full shrink-0 mt-1.5"></div>
                  {!isLast && <div class="w-0.5 flex-1 bg-gray-200 min-h-[2rem]"></div>}
                </div>
                
                <div class={`flex-1 ${!isLast ? 'pb-6' : ''}`}>
                  <div class="bg-white rounded-xl border border-gray-200 p-5 shadow-sm hover:shadow-md transition-shadow">
                    <div class="flex flex-wrap items-center gap-2 mb-3">
                      <time class="text-sm font-semibold text-primary">
                        {formatDate(program.data.tanggal!)}
                      </time>
                      <span class={`text-xs font-medium px-2.5 py-0.5 rounded-full capitalize ${config.bgColor} ${config.textColor}`}>
                        {program.data.kategori}
                      </span>
                    </div>
                    
                    <h3 class="text-lg font-bold text-gray-900 mb-2">{program.data.title}</h3>
                    <p class="text-gray-600 mb-3">{program.data.ringkasan}</p>
                    
                    <p class="text-sm text-gray-500 flex items-center gap-1.5">
                      <svg class="w-4 h-4 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      </svg>
                      {program.data.lokasi}
                    </p>
                  </div>
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </div>
  </section>
)}
