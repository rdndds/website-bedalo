---
import { Image, getImage } from 'astro:assets';
import { LightGallery } from 'astro-lightgallery';
import type { ImageMetadata } from 'astro';
import { siteConfig } from '../../data/siteConfig';
import { uiStrings } from '../../data/uiStrings';

interface GalleryItem {
  src: ImageMetadata;
  alt: string;
}

interface Props {
  gallery: GalleryItem[];
  kode: string;
}

const { gallery, kode } = Astro.props;

const applyTemplate = (
  template: string,
  vars: Record<string, string | number>
) => template.replace(/\{(\w+)\}/g, (_, key) => String(vars[key] ?? ''));

const subtitle = uiStrings.kkn.gallery.subtitleTemplate
  ? applyTemplate(uiStrings.kkn.gallery.subtitleTemplate, {
      kode,
      siteName: siteConfig.name,
    })
  : '';

const galleryWithUrls = await Promise.all(
  gallery.map(async (item, index) => {
    const optimized = await getImage({ src: item.src, width: 1920 });
    return { ...item, lightboxSrc: optimized.src, index };
  })
);
---

{
  gallery.length > 0 && (
    <section id="galeri" class="py-12 lg:py-16 scroll-mt-16">
      <div class="max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-8" data-aos="fade-up">
          <h2 class="text-3xl md:text-4xl font-extrabold text-gray-900 mb-3">
            {uiStrings.kkn.gallery.titlePrefix}{' '}
            <span class="gradient-text">KKN {kode}</span>
          </h2>
          <p class="text-gray-600 max-w-2xl mx-auto">
            {subtitle}
          </p>
          <p class="text-sm text-gray-500 mt-2">
            <span class="font-medium">{gallery.length}</span>{' '}
            {uiStrings.common.photo.toLowerCase()}
          </p>
        </div>

        <LightGallery
          options={{ thumbnail: true }}
          addPlugins={['zoom', 'thumbnail']}
          class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 md:gap-6"
          id="kkn-gallery-grid"
        >
          {galleryWithUrls.map((item, idx) => (
            <a
              href={item.lightboxSrc}
              data-sub-html={`<h4>${item.alt}</h4>`}
              class="group relative aspect-square overflow-hidden rounded-2xl bg-gray-200 shadow-lg hover:shadow-xl transition-all cursor-pointer"
              data-aos="zoom-in"
              data-aos-delay={idx * 50}
            >
              <Image
                src={item.src}
                alt={item.alt}
                width={400}
                height={400}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                loading="lazy"
                decoding="async"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <div class="absolute bottom-0 left-0 right-0 p-4 translate-y-2 group-hover:translate-y-0 transition-transform duration-300">
                  <p class="text-white font-semibold text-sm line-clamp-2">
                    {item.alt}
                  </p>
                </div>
              </div>
            </a>
          ))}
        </LightGallery>
      </div>
    </section>
  )
}
