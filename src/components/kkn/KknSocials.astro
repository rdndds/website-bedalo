---
interface Socials {
  instagram?: string;
  tiktok?: string;
  youtube?: string;
  other?: string;
}

interface Props {
  socials?: Socials;
  kode: string;
}

const { socials, kode } = Astro.props;

function getYouTubeEmbedUrl(url: string): string | null {
  const regExp = /^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|&v=|list=)([^#&?]*).*/;
  const match = url.match(regExp);
  
  if (url.includes('list=')) {
    const listMatch = url.match(/list=([^#&?]*)/);
    if (listMatch) {
      return `https://www.youtube.com/embed/videoseries?list=${listMatch[1]}`;
    }
  }
  
  if (match && match[2].length === 11) {
    return `https://www.youtube.com/embed/${match[2]}`;
  }
  
  return null;
}

const youtubeEmbedUrl = socials?.youtube ? getYouTubeEmbedUrl(socials.youtube) : null;
