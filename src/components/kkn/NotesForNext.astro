---
import { uiStrings } from '../../data/uiStrings';

interface Note {
  type: 'lanjutan' | 'saran' | 'peringatan';
  text: string;
}

interface Props {
  notes: Note[];
  kode: string;
}

const { notes, kode } = Astro.props;

const applyTemplate = (
  template: string,
  vars: Record<string, string | number>
) => template.replace(/\{(\w+)\}/g, (_, key) => String(vars[key] ?? ''));

const subtitle = uiStrings.kkn.notes.subtitleTemplate
  ? applyTemplate(uiStrings.kkn.notes.subtitleTemplate, { kode })
  : '';

const typeConfig: Record<
  string,
  {
    icon: string;
    label: string;
    bgColor: string;
    borderColor: string;
    textColor: string;
  }
> = {
  lanjutan: {
    icon: 'ðŸ”„',
    label: uiStrings.kkn.notes.typeLabels.lanjutan,
    bgColor: 'bg-green-50',
    borderColor: 'border-green-500',
    textColor: 'text-green-700',
  },
  saran: {
    icon: 'ðŸ’¡',
    label: uiStrings.kkn.notes.typeLabels.saran,
    bgColor: 'bg-blue-50',
    borderColor: 'border-blue-500',
    textColor: 'text-blue-700',
  },
  peringatan: {
    icon: 'âš ï¸',
    label: uiStrings.kkn.notes.typeLabels.peringatan,
    bgColor: 'bg-orange-50',
    borderColor: 'border-orange-500',
    textColor: 'text-orange-700',
  },
};
---

{
  notes.length > 0 && (
    <section id="catatan" class="py-12 lg:py-16 scroll-mt-20">
      <div class="max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-8" data-aos="fade-up">
          <h2 class="text-3xl md:text-4xl font-extrabold text-gray-900 mb-3">
            {uiStrings.kkn.notes.titlePrefix}{' '}
            <span class="gradient-text">{uiStrings.kkn.notes.titleHighlight}</span>
          </h2>
          <p class="text-gray-600 max-w-2xl mx-auto">
            {subtitle}
          </p>
        </div>

        <div class="max-w-3xl mx-auto space-y-4">
          {notes.map((note, index) => {
            const config = typeConfig[note.type];
            return (
              <div
                class={`${config.bgColor} rounded-xl p-5 border-l-4 ${config.borderColor}`}
                data-aos="fade-up"
                data-aos-delay={index * 100}
              >
                <div class="flex items-start gap-3">
                  <span class="text-2xl">{config.icon}</span>
                  <div>
                    <span
                      class={`inline-block px-2 py-0.5 rounded-full text-xs font-semibold ${config.textColor} ${config.bgColor} mb-2`}
                    >
                      {config.label}
                    </span>
                    <p class="text-gray-700">{note.text}</p>
                  </div>
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </section>
  )
}
