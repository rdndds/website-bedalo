---
import { getEntry } from 'astro:content';

const data = await getEntry('siteContent', 'tentang-proyek');
const digitalisasi = data?.data?.digitalisasi;
const paragraphs = digitalisasi?.paragraphs || [];
const features = digitalisasi?.features || [];
---

{
  digitalisasi && (
    <div
      class="bg-white rounded-2xl p-6 md:p-8 shadow-lg mb-10"
      data-aos="fade-up"
    >
      <div class="flex items-center gap-3 mb-6">
        <div class="w-14 h-14 bg-gradient-to-br from-primary to-accent rounded-xl flex items-center justify-center">
          <span class="text-3xl">ğŸ’»</span>
        </div>
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900">
          {digitalisasi.title}
        </h2>
      </div>
      <div class="space-y-4 text-gray-600 leading-relaxed">
        {paragraphs.map((p) => (
          <p set:html={p} />
        ))}
      </div>
      <div class="mt-6 grid grid-cols-1 md:grid-cols-3 gap-4">
        {features.map((f, index) => (
          <div
            class="bg-blue-50 rounded-xl p-4 text-center"
            data-aos="zoom-in"
            data-aos-delay={Math.min(index * 100, 300)}
          >
            <div class="text-3xl mb-2">{f.icon}</div>
            <p class="font-semibold text-gray-900">{f.title}</p>
          </div>
        ))}
      </div>
    </div>
  )
}
