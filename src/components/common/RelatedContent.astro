---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface RelatedItem {
  title: string;
  slug: string;
  thumbnail: ImageMetadata;
  description?: string;
  kategori?: string;
}

interface Props {
  items: RelatedItem[];
  type: 'wisata' | 'umkm' | 'berita';
  title?: string;
}

const { items, type, title = 'Konten Terkait' } = Astro.props;

const basePath = type === 'berita' ? '/berita' : `/potensi/${type}`;
const typeIcon = type === 'wisata' ? 'ðŸ–ï¸' : type === 'umkm' ? 'ðŸ›ï¸' : 'ðŸ“°';
---

{
  items.length > 0 && (
    <div class="mt-12 pt-8 border-t border-gray-200" data-aos="fade-up">
      <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center gap-2">
        <span class="text-2xl">{typeIcon}</span> {title}
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {items.map((item, index) => (
          <a
            href={`${basePath}/${item.slug}`}
            class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl hover:-translate-y-1 transition-all"
            data-aos="fade-up"
            data-aos-delay={Math.min(index * 100, 300)}
          >
            <div class="h-40 bg-gray-200 overflow-hidden">
              <Image
                src={item.thumbnail}
                alt={item.title}
                width={400}
                height={160}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                loading="lazy"
                decoding="async"
              />
            </div>
            <div class="p-4">
              {item.kategori && (
                <span class="inline-block px-2 py-0.5 bg-primary/10 text-primary text-xs font-medium rounded-full mb-2 capitalize">
                  {item.kategori}
                </span>
              )}
              <h3 class="font-bold text-gray-900 line-clamp-2 group-hover:text-primary transition-colors">
                {item.title}
              </h3>
              {item.description && (
                <p class="text-sm text-gray-600 line-clamp-2 mt-1">
                  {item.description}
                </p>
              )}
            </div>
          </a>
        ))}
      </div>
    </div>
  )
}
