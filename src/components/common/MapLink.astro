---
import { uiStrings } from '../../data/uiStrings';

interface Props {
  url: string;
  class?: string;
}

const { url, class: className } = Astro.props;
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class:list={[
    'inline-flex items-center gap-2 px-4 py-2 bg-green-700 text-white rounded-lg hover:bg-green-800 hover:-translate-y-0.5 hover:shadow-md transition-all text-sm font-medium',
    className,
  ]}
>
  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
    <path
      d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"
    >
    </path>
  </svg>
  {uiStrings.common.openMapsShort}
</a>
