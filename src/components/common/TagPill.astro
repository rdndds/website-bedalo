---
interface Props {
  label: string;
  icon?: string;
  bg?: string;
  text?: string;
  class?: string;
}

const {
  label,
  icon,
  bg = 'bg-gray-100',
  text = 'text-gray-700',
  class: className = '',
} = Astro.props;
---

<span
  class:list={[
    'inline-flex items-center gap-1 px-3 py-1 rounded-full text-sm font-medium',
    bg,
    text,
    className,
  ]}
>
  {icon && <span>{icon}</span>}
  <span>{label}</span>
</span>
