---
interface Props {
  title: string;
  subtitle?: string;
  center?: boolean;
  class?: string;
  animate?: boolean;
}

const {
  title,
  subtitle,
  center = true,
  class: className = '',
  animate = true,
} = Astro.props;
---

<div
  class:list={[center && 'text-center', 'mb-8', className]}
  data-aos={animate ? 'fade-up' : undefined}
>
  <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-2">{title}</h2>
  <div
    class:list={[
      'w-20 h-1 bg-gradient-to-r from-primary to-accent rounded-full',
      center && 'mx-auto',
    ]}
  >
  </div>
  {subtitle && <p class="text-gray-600 mt-4">{subtitle}</p>}
</div>
