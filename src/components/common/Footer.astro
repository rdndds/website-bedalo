---
import { footerNavLinks, footerInfoLinks } from '../../data/navigation';
import { siteConfig } from '../../data/siteConfig';

const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-950 pt-12 pb-6" role="contentinfo" aria-label="Footer">
  <div class="max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Top cards grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
      <!-- Location Card -->
      <div
        class="bg-gray-800 rounded-2xl p-6 hover:bg-gray-700 transition-colors"
        data-aos="fade-right"
      >
        <h3 class="font-bold text-white flex items-center gap-2 mb-4">
          <span class="text-xl">üìç</span> Lokasi
        </h3>
        <div class="space-y-1 text-sm text-blue-100 mb-4">
          <p class="font-medium text-white">Dusun {siteConfig.address.dusun}</p>
          <p>Kalurahan {siteConfig.address.kalurahan}</p>
          <p>Kapanewon {siteConfig.address.kapanewon}</p>
          <p>Kabupaten {siteConfig.address.kabupaten}</p>
          <p>{siteConfig.address.provinsi}</p>
          <p class="text-blue-200">Kode Pos: {siteConfig.address.kodePos}</p>
        </div>
        <a
          href={siteConfig.mapsUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-sm font-medium text-white hover:text-accent transition-colors"
        >
          <svg
            class="w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
            >
            </path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
            >
            </path>
          </svg>
          Buka di Google Maps
        </a>
      </div>

      <!-- Navigation Card -->
      <div
        class="bg-gray-800 rounded-2xl p-6 hover:bg-gray-700 transition-colors"
        data-aos="fade-up"
        data-aos-delay="100"
      >
        <h3 class="font-bold text-white flex items-center gap-2 mb-4">
          <span class="text-xl">üîó</span> Navigasi
        </h3>
        <ul class="space-y-2">
          {
            footerNavLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-blue-100 hover:text-accent transition-colors flex items-center gap-2"
                >
                  <span class="w-1.5 h-1.5 bg-white/40 rounded-full" />
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Info Card -->
      <div
        class="bg-gray-800 rounded-2xl p-6 hover:bg-gray-700 transition-colors"
        data-aos="fade-left"
        data-aos-delay="200"
      >
        <h3 class="font-bold text-white flex items-center gap-2 mb-4">
          <span class="text-xl">üìö</span> Informasi
        </h3>
        <ul class="space-y-2">
          {
            footerInfoLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-blue-100 hover:text-accent transition-colors flex items-center gap-2"
                >
                  <span class="w-1.5 h-1.5 bg-white/40 rounded-full" />
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
        <div class="mt-4 pt-4 border-t border-blue-400/30">
          <p class="text-xs text-blue-200">
            Website resmi Dusun Bedalo untuk informasi wisata, UMKM, dan
            kegiatan warga.
          </p>
        </div>
      </div>
    </div>

    <!-- Bottom brand bar -->
    <div class="bg-gray-800 rounded-2xl p-6">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <div class="flex items-center gap-3">
          <div>
            <h4 class="font-bold text-white">{siteConfig.name}</h4>
            <p class="text-sm text-blue-100">{siteConfig.tagline}</p>
          </div>
        </div>
        <div class="text-center md:text-right">
          <p class="text-sm text-blue-100">
            &copy; {currentYear}
            {siteConfig.name}
          </p>
          <p class="text-xs text-blue-200">
            Dibangun oleh{' '}
            <a
              href="/tentang-proyek"
              class="text-white hover:text-accent transition-colors"
            >
              KKN UIN Sunan Kalijaga
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>
