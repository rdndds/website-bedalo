---
interface Props {
  icon: string;
  title: string;
  description?: string;
  color?: string;
  iconBg?: string;
  class?: string;
  aosDelay?: number;
}

const {
  icon,
  title,
  description,
  color = 'bg-white',
  iconBg = 'bg-gray-100',
  class: className = '',
  aosDelay,
} = Astro.props;
---

<div
  class:list={[
    color,
    'rounded-2xl p-5 md:p-6 hover:shadow-lg hover:-translate-y-1 transition-all',
    className,
  ]}
  data-aos="fade-up"
  data-aos-delay={aosDelay}
>
  <div
    class:list={[
      'w-16 h-16',
      iconBg,
      'rounded-2xl flex items-center justify-center mb-4',
    ]}
  >
    <span class="text-3xl">{icon}</span>
  </div>
  <h3 class="text-lg font-bold text-gray-900 mb-2">{title}</h3>
  {description && <p class="text-sm text-gray-600">{description}</p>}
  <slot />
</div>
