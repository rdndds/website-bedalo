<script>
  import EmblaCarousel from 'embla-carousel';
  import Autoplay from 'embla-carousel-autoplay';

  const initializedCarousels = new Set();

  const initCarousels = () => {
    document.querySelectorAll('[data-category]').forEach((node) => {
      const catIdx = node.getAttribute('data-category');

      // Prevent double initialization
      if (initializedCarousels.has(catIdx)) return;
      initializedCarousels.add(catIdx);

      const baseDelay = 3000;
      const staggerOffset = 1000;
      const delay = baseDelay + parseInt(catIdx || '0') * staggerOffset;

      const embla = EmblaCarousel(
        node as HTMLElement,
        {
          loop: true,
          align: 'start',
          dragFree: true,
        },
        [Autoplay({ delay, stopOnMouseEnter: true, stopOnInteraction: false })]
      );

      document
        .querySelector(`.embla-prev-${catIdx}`)
        ?.addEventListener('click', () => embla.scrollPrev());
      document
        .querySelector(`.embla-next-${catIdx}`)
        ?.addEventListener('click', () => embla.scrollNext());
    });
  };

  // Run on initial load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initCarousels);
  } else {
    initCarousels();
  }

  // Run after Astro view transitions
  document.addEventListener('astro:page-load', initCarousels);
</script>
