---
import { Image } from 'astro:assets';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Button from '../../../components/common/Button.astro';
import MapLink from '../../../components/common/MapLink.astro';
import WhatsAppLink from '../../../components/common/WhatsAppLink.astro';
import ShareButtons from '../../../components/common/ShareButtons.astro';
import RelatedContent from '../../../components/common/RelatedContent.astro';
import SchemaLocalBusiness from '../../../components/common/SchemaLocalBusiness.astro';
import SchemaBreadcrumb from '../../../components/common/SchemaBreadcrumb.astro';
import { LightGallery } from 'astro-lightgallery';
import { getCollection, getEntry, type CollectionEntry } from 'astro:content';
import { umkmKategoriIcons } from '../../../data/constants';
import { uiStrings } from '../../../data/uiStrings';

export async function getStaticPaths() {
  const umkmEntries = await getCollection('umkm');
  return umkmEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry, allUmkm: umkmEntries },
  }));
}

interface Props {
  entry: CollectionEntry<'umkm'>;
  allUmkm: CollectionEntry<'umkm'>[];
}

const { entry, allUmkm } = Astro.props;
const { Content } = await entry.render();
const {
  nama,
  pemilik,
  kategori,
  thumbnail,
  deskripsi,
  produk,
  alamat,
  mapsUrl,
  whatsapp,
  jamOperasional,
  galeri,
} = entry.data;

const potensiEntry = await getEntry('siteContent', 'pages/potensi');

if (!potensiEntry?.data?.potensiPage) {
  throw new Error('Missing siteContent entry: pages/potensi');
}

const detailCopy = potensiEntry.data.potensiPage.detailPages;

const relatedUmkm = allUmkm
  .filter((u) => u.slug !== entry.slug && u.data.kategori === kategori)
  .slice(0, 3)
  .map((u) => ({
    title: u.data.nama,
    slug: u.slug,
    thumbnail: u.data.thumbnail,
    description: u.data.deskripsi,
    kategori: u.data.kategori,
  }));
---

<BaseLayout title={nama} description={deskripsi} image={thumbnail.src}>
  <SchemaBreadcrumb
    items={[
      { name: 'Potensi', url: '/potensi' },
      { name: 'UMKM' },
      { name: nama },
    ]}
  />
  <SchemaLocalBusiness
    nama={nama}
    deskripsi={deskripsi}
    alamat={alamat}
    whatsapp={whatsapp}
    jamOperasional={jamOperasional}
    mapsUrl={mapsUrl}
    image={thumbnail.src}
  />
  <article class="py-12 lg:py-16">
    <div class="max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8">
      <div
        class="relative rounded-2xl overflow-hidden mb-8 shadow-xl"
        data-aos="zoom-in"
      >
        <Image
          src={thumbnail}
          alt={nama}
          width={1200}
          height={600}
          class="w-full h-72 md:h-[28rem] object-cover"
          decoding="async"
        />
        <div
          class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"
        >
        </div>
        <div class="absolute bottom-0 left-0 right-0 p-6 md:p-8">
          <div class="flex flex-wrap items-center gap-2 mb-3">
            <span
              class="px-3 py-1.5 bg-accent-dark text-white text-sm font-semibold rounded-full capitalize shadow-lg"
            >
              {umkmKategoriIcons[kategori] || 'ğŸª'}
              {kategori}
            </span>
          </div>
          <h1 class="text-3xl md:text-5xl font-extrabold text-white mb-2">
            {nama}
          </h1>
          <p class="text-white/80 flex items-center gap-2">
            <span class="px-3 py-1 bg-white/20 rounded-full text-sm">
              ğŸ‘¤ {pemilik}
            </span>
          </p>
        </div>
      </div>

      <p class="text-lg text-gray-600 leading-relaxed mb-8" data-aos="fade-up">
        {deskripsi}
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
        <div
          class="bg-blue-50 rounded-2xl p-5 hover:shadow-lg hover:-translate-y-0.5 transition-all"
          data-aos="fade-right"
        >
          <div class="flex items-center gap-3 mb-3">
            <div
              class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center"
            >
              <span class="text-2xl">ğŸ“</span>
            </div>
            <span class="font-semibold text-gray-900">
              {detailCopy.umkm.addressLabel}
            </span>
          </div>
          <p class="text-gray-600">{alamat}</p>
        </div>
        <div
          class="bg-amber-50 rounded-2xl p-5 hover:shadow-lg hover:-translate-y-0.5 transition-all"
          data-aos="fade-left"
          data-aos-delay="100"
        >
          <div class="flex items-center gap-3 mb-3">
            <div
              class="w-12 h-12 bg-amber-100 rounded-xl flex items-center justify-center"
            >
              <span class="text-2xl">ğŸ•</span>
            </div>
            <span class="font-semibold text-gray-900">
              {detailCopy.umkm.hoursLabel}
            </span>
          </div>
          <p class="text-gray-600">{jamOperasional}</p>
        </div>
      </div>

      <div class="bg-white rounded-2xl p-6 shadow-lg mb-8" data-aos="flip-up">
        <h2
          class="text-xl font-bold text-gray-900 mb-4 flex items-center gap-2"
        >
          <span class="text-2xl">ğŸ›ï¸</span> {detailCopy.umkm.productsTitle}
        </h2>
        <div class="flex flex-wrap gap-3">
          {
            produk.map((item) => (
              <span class="inline-flex items-center gap-2 px-4 py-2 bg-accent/10 rounded-full text-sm font-medium text-accent hover:bg-accent/20 transition-colors">
                <span>âœ¨</span>
                {item}
              </span>
            ))
          }
        </div>
      </div>

      <div class="flex flex-wrap gap-4 mb-10" data-aos="fade-up">
        <WhatsAppLink
          phone={whatsapp}
          message={`Halo, saya tertarik dengan produk ${nama}`}
        />
        <MapLink url={mapsUrl} />
      </div>

      {
        galeri && galeri.length > 0 && (
          <div class="mb-10" data-aos="fade-up">
            <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center gap-2">
              <span class="text-2xl">ğŸ“·</span> {detailCopy.umkm.galleryTitle}
            </h2>
            <LightGallery
              options={{ thumbnail: true }}
              addPlugins={['zoom', 'thumbnail']}
              class="grid grid-cols-2 md:grid-cols-3 gap-4"
            >
              {galeri.map((img) => (
                <a
                  href={img}
                  class="group relative aspect-square rounded-2xl overflow-hidden shadow-lg cursor-pointer"
                >
                  <img
                    src={img}
                    alt={nama}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    loading="lazy"
                    decoding="async"
                  />
                  <div class="absolute inset-0 bg-black/30 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                    <span class="text-white text-2xl">ğŸ”</span>
                  </div>
                </a>
              ))}
            </LightGallery>
          </div>
        )
      }

      <div
        class="prose prose-lg prose-blue max-w-none mb-10"
        data-aos="fade-up"
      >
        <Content />
      </div>

      <div class="mb-10" data-aos="fade-up">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
          {uiStrings.common.share}
        </h3>
        <ShareButtons title={nama} />
      </div>

      <RelatedContent
        items={relatedUmkm}
        type="umkm"
        title={detailCopy.related.umkm}
      />

      <div class="mt-10">
        <Button href="/potensi" variant="outline">
          {detailCopy.backLabel}
        </Button>
      </div>
    </div>
  </article>
</BaseLayout>
